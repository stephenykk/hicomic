.enroll-container {
    display: flex;
    height: 100vh;
    flex-flow: column nowrap;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}

.intro {
    /*font-size: 30rpx;*/
    padding: 10rpx 30rpx;
    color: #aaa;
    background: #ffe;
    line-height: 1.5;
    margin-bottom: 20rpx;
}

.section-data {
    flex: 1;
    margin-bottom: 20rpx;
}

.ctrl-line label {
    width: 130rpx;
}

.ctrl-ta {
    display: flex;
    flex-flow: column nowrap;
    padding-bottom: 30rpx;
}


.actions {
    text-align: right;
}

.names-ta {
    flex: 1;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 10rpx;
}

.name-input {
    margin-right: 20rpx;
    display:inline-block;
}

.input-line {
    display: flex;
    flex-flow: row nowrap;
}

.input-line input {
    flex: 1;
}